<Window x:Class="WPFTextGUI.Webcheck.WebControlPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFTextGUI.Webcheck"
        mc:Ignorable="d"
        Title="WebControlWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="TxtUrl" FontSize="24" HorizontalAlignment="Left" Margin="105,48,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="404"/>
        <TextBox x:Name="TxtTerm" FontSize="24" HorizontalAlignment="Left" Margin="105,118,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="404"/>
        <Button x:Name="BtnStart" FontSize="24" Width="100" Content="Start" HorizontalAlignment="Left" Margin="105,176,0,0" VerticalAlignment="Top" Click="BtnStart_Click"/>
        <Button x:Name="BtnStop" FontSize="24" Width="100" Content="Stop" HorizontalAlignment="Left" Margin="276,176,0,0" VerticalAlignment="Top" Click="BtnStop_Click"/>
        <Label Content="Url" FontSize="20" HorizontalAlignment="Left" Margin="105,17,0,0" VerticalAlignment="Top"/>
        <Label Content="Search" FontSize="20" HorizontalAlignment="Left" Margin="105,87,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
